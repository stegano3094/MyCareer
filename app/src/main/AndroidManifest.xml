<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stegano.mycareer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_ste"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_ste"
        android:supportsRtl="true"
        android:theme="@style/CleanTheme">
        <activity android:name=".NoticeActivity"
            android:theme="@style/Theme.MyCareer"></activity>
        <activity android:name=".DetailProjectActivity"
            android:theme="@style/Theme.MyCareer" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>