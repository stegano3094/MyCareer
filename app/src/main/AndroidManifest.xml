<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stegano.mycareer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_ste"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_ste"
        android:supportsRtl="true"
        android:theme="@style/CleanTheme">

        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <activity android:name=".NoticeActivity"
            android:label="공지"
            android:theme="@style/Theme.MyCareer" />
        <activity android:name=".ProjectDetailActivity"
            android:label="상세보기"
            android:theme="@style/Theme.MyCareer" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

