<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCareer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_title_color</item>
        <item name="colorPrimaryVariant">@color/main_sub_title_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize Font -->
        <!-- 폰트 출처 : https://brunch.co.kr/@jmh5531/151 -->
        <item name="android:fontFamily">@font/bmyeonsung_font</item>
    </style>


    <!-- Custom application theme (Clean Theme) -->
    <style name="CleanTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="21">#00000000</item>

        <item name="colorPrimary">@color/main_title_color</item>
        <item name="colorPrimaryVariant">@color/main_sub_title_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Customize Font -->
        <item name="android:fontFamily">@font/bmyeonsung_font</item>
    </style>


    <!-- Material Design, https://material.io/components/app-bars-top/android#regular-top-app-bar -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Customize Font -->
        <item name="android:fontFamily">@font/bmyeonsung_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <!-- Customize Font -->
        <item name="android:fontFamily">@font/bmyeonsung_font</item>
    </style>
</resources>